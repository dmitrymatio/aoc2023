{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "moduleDetection": "force",
        "resolveJsonModule": true,
        "isolatedModules": true,
        /* If transpiling with TypeScript: */
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "dist",
        "sourceMap": true,
    }
}